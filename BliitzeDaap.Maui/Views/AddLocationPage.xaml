<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BliitzeDaap.Maui.Views.AddLocationPage"
             Title="AddLocationPage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Label Text="📍 Location to Test Chain Network" FontSize="20" FontAttributes="Bold"></Label>
        <Image Source="dotnet_bot"></Image>
        <Frame CornerRadius="8">
            <VerticalStackLayout>
                <Label Text="Label" FontSize="14"></Label>
                <Entry x:Name="labelPosition" HeightRequest="50"  Placeholder="Hey...."></Entry>
                
            </VerticalStackLayout>
        </Frame>
        <Button ImageSource="owner.png"
                        BorderColor="Black"
                        CornerRadius="8"
                    BackgroundColor="White"
                    x:Name="BtnAddlocation"
                    Text="Add Location to Contract"
                    TextColor="Black"
                    Clicked="BtnAddlocation_Clicked"                   
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>